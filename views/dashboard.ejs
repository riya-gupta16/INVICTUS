<!DOCTYPE html>
<html>
<head>
  <title>My Submissions</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      padding: 40px;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
    }
    th, td {
      border: 1px solid #ccc;
      padding: 10px;
      text-align: center;
    }
    th {
      background-color: #f4f4f4;
    }
    tr:nth-child(even) {
      background-color: #fafafa;
    }
    button {
      padding: 6px 12px;
      background-color: #e74c3c;
      color: white;
      border: none;
      border-radius: 4px;
      cursor: pointer;
    }
    button:hover {
      background-color: #c0392b;
    }
  </style>
</head>
<body>

  <h2>My Submissions</h2>

  <% if (submissions && submissions.length) { %>
    <table>
      <tr>
        <th>Category</th>
        <th>Sub Option</th>
        <th>Weight/Count</th>
        <th>Worth</th>
        <th>Status</th>
        <th>Action</th>
      </tr>
      <% submissions.forEach(s => { 
          const status = (s.status || 'Pending').toLowerCase();
          const statusColor = status === 'approved' ? 'green' : status === 'rejected' ? 'red' : 'orange';
      %>
        <tr>
          <td><%= s.category || '-' %></td>
          <td><%= s.subOption || '-' %></td>
          <td><%= s.weightOrCount || '-' %></td>
          <td>â‚¹<%= s.worth || 0 %></td>
          <td style="color: <%= statusColor %>;">
            <%= s.status || 'Pending' %>
          </td>
          <td>
           <form action="/waste/delete/<%= s._id.toString() %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this submission?');">

              <button type="submit">Remove</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </table>
  <% } else { %>
    <p>No submissions found.</p>
  <% } %>

</body>
</html>
